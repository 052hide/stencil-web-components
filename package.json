{
  "name": "052hide-stencil-wc",
  "version": "0.1.2",
  "description": "Stencil Component Starter",
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/custom-elements/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/stencil-web-components/stencil-web-components.esm.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "lint": "eslint src/**/*{.ts,.tsx}",
    "lint:fix": "eslint . --ext .js,.ts,.jsx,.tsx --fix --ignore-path .gitignore",
    "prettier:fix": "prettier --write . --ignore-path .prettierignore"
  },
  "dependencies": {
    "@stencil/core": "^2.6.0"
  },
  "devDependencies": {
    "@stencil/eslint-plugin": "^0.3.1",
    "@stencil/postcss": "^2.0.0",
    "@types/jest": "^27.0.1",
    "@types/puppeteer": "^5.4.3",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "autoprefixer": "^10.3.1",
    "eslint": "^8.18.0",
    "eslint-plugin-react": "^7.24.0",
    "jest": "^27.0.6",
    "jest-cli": "^27.0.6",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "puppeteer": "^10.2.0",
    "tailwindcss": "^2.2.7",
    "typescript": "^4.3.5"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/052hide/stencil-web-components.git"
  }
}
